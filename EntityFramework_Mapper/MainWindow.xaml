<Window x:Class="EntityFramework_Mapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFramework_Mapper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="924">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <DataGrid x:Name="datagrid1" Margin="10"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btn_LoadData" Grid.Column="0" Margin="10" Click="btn_LoadData_Click">Pobierz dane</Button>
            <Button x:Name="btn_CreateCar" Grid.Column="1" Margin="10" Click="btn_CreateCar_Click">Utwórz pojazd</Button>
            <Button x:Name="btn_CreateUser" Grid.Column="2" Margin="10" Click="btn_CreateUser_Click">Utwóz użytkownika</Button>
        </Grid>
        
    </Grid>
</Window>
