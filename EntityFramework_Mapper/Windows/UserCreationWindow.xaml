<Window x:Class="EntityFramework_Mapper.Windows.UserCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityFramework_Mapper.Windows"
        mc:Ignorable="d"
        Title="UserCreationWindow" Height="284" Width="574">
    <Grid Margin="30">
        <StackPanel>
            <DockPanel Margin="0,0,0,10">
                <Label Content="Imię:"/>
                <TextBox Margin="0,0,300,0" x:Name="txt_Name" LostFocus="txt_Name_LostFocus"/>
            </DockPanel>
            <DockPanel Margin="0,0,0,10">
                <Label Content="Nazwisko:"/>
                <TextBox x:Name="txt_Surname" Margin="0,0,300,0" LostFocus="txt_Surname_LostFocus"/>
            </DockPanel>
            <DockPanel Margin="0,0,0,10">
                <Label Content="Pojazd:"/>
                <ComboBox x:Name="cmb_Cars" SelectionChanged="cmb_Cars_SelectionChanged" />
            </DockPanel>
            <DockPanel>
                <Button x:Name="btn_CreateUser" Height="30" Click="btn_CreateUser_Click">Utwórz samochód</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
